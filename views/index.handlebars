{{!-- Buy Table Column Names (START) --}}
<section id="stock-section">
  <h2 class="text-center">Stocks and Indexes</h2>
  <div class="container stock-lists" id="border">
    <h4 class="text-center buy-sell-title">Buy</h4>
    <div class="row ml-5 pl-4 offset-md-2">
      <div class="col-md-1 offset-md-1">
        <h6 class="text-center">Period</h6>
      </div>
      <div class="col-md-2">
        <h6 class="text-center">Stock</h6>
      </div>
      <div class="col-md-1 pl-1">
        <h6 class="text-center">Ticker</h6>
      </div>
      <div class="col-md-1">
        <h6 class="text-center">Price</h6>
      </div>
      <div class="col-md-1 pl-1">
        <h6 class="text-center">Shares</h6>
      </div>
      <div class="col-md-1 pl-1">
        <h6 class="text-center">Valuation</h6>
      </div>
      <div class="col-md-1 offset-md-1 pl-1">
        <h6 class="text-center">Buy</h6>
      </div>
    </div>
    {{!-- Buy Table Column Names (END) --}}

    {{!-- Buy Table Form (START) --}}
    {{#each positions}}
    <form id="form-positions-buy" method="POST" action="/buy_sell">
      <div class="form-row ml-5 pl-4 offset-md-1" id="stockList">
        <div class="col-md-1 offset-md-1">
          <input type="text" class="form-control" id="monthly_period" name="monthly_period" value="{{this.monthly_period}}"
            readonly="readonly">
        </div>
        <div class="col-md-2">
          <input type="text" class="form-control" id="stock" name="stock" value="{{this.stock}}" readonly="readonly">
        </div>
        <div class="col-md-1">
          <input type="text" class="form-control" id="ticker" name="ticker" value="{{this.ticker}}" readonly="readonly">
        </div>
        <div class="col-md-1">
          <input type="text" class="form-control" id="price" name="price" value="{{this.price}}" readonly="readonly">
        </div>
        <div class="col-md-1">
          <input type="text" class="form-control" id="shares" name="shares" value="{{this.shares}}" readonly="readonly">
        </div>
        <div class="col-md-1">
          <input type="text" class="form-control" id="valuation" name="valuation" value="{{this.valuation}}" readonly="readonly">
        </div>
        <div class="col-md-1">
          <button type="submit" class="btn btn-success ml-3 mb-2" id="buy" name="buy_sell" value="buy">Buy</button>
        </div>
        <div class="col-md-1">
          <input type="number" class="form-control" id="trx_shares" name="trx_shares" placeholder="# shares">
        </div>
        <div class="col-md-1">
          <button type="submit" class="btn btn-danger ml-3 mb-2" id="sell" name="buy_sell" value="sell">Sell</button>
        </div>
        <div class="col-md-1">
          <input type="text" class="form-control" id="user_name" name="user_name" value="{{this.user_name}}" readonly="readonly">
        </div>
      </div>
    </form>
    {{/each}}
  </div>
  {{!-- buy_sell Table Form (END) --}}

{{!-- Transactions History (START) --}}
<section id="transactions-section">
  <h2 class="text-center">Transactions History</h2>
  <div class="container" id="border">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col-1 offset-1" class="text-center">Period #</th>
          <th scope="col-1" class="text-center">Buy/Sell</th>
          <th scope="col-2" class="text-center">Stock</th>
          <th scope="col-1" class="text-center">Ticker</th>
          <th scope="col-1" class="text-center">Shares</th>
          <th scope="col-1" class="text-center">Price</th>
          <th scope="col-1" class="text-center">Cash</th>
        </tr>
      </thead>
      <tbody>
        {{#each transactions}}
        <tr>
          <td id="trx_period">{{this.monthly_period}}</td>
          <td id="trx_buy_sell">{{this.buy_sell}}</td>
          <td id="trx_stock">{{this.stock}}</td>
          <td id="trx_ticker">{{this.ticker}}</td>
          <td id="trx_shares">{{this.shares}}</td>
          <td id="trx_price">{{this.price}}</td>
          <td id="trx_cash">{{this.cash}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <form id="frm-next_monthly_period" method="POST" action="/next_monthly_period">
            <button type="submit" class="btn btn-primary text-center" id="btn-next_monthly-period">Next Period</button>
          </form>
        </div>
      </div>
    </div>
    {{!-- <div class="container">
      <div class="row">
