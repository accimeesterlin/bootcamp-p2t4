<div class="container">
  <div class="row">
    <div class="col-md-6">
      <form id="frm-next_monthly_period" method="POST" action="/next_monthly_period">
        <button type="submit" class="btn btn-primary text-center" id="btn-next_monthly-period">Next Period</button>
      </form>
    </div>
  </div>
</div>

<h2 class="text-center">Time Series Performance</h2>
<div class="container" id="border">
  <br>
  <div class="row">
    <div class="col-md-3">
      <div class="card" style="width: 70rem;">
        <div class="card-body">
          <div class="container">
            <h4 class="text-center">Period {{this.monthly_period}}</h4>
            <br>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="text-center" id="positionStock">Stock</th>
                  <th scope="col" class="text-center" id="positionTicker">Ticker</th>
                  <th scope="col" class="text-center" id="positionShares">Shares</th>
                  <th scope="col" class="text-center" id="positionValue">Total Value</th>
                  <th scope="col" class="text-center" id="positionCash">Cash</th>
                  <th scope="col" class="text-center" id="positionPortfolioAmount">Portfolio Amount</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td id="positionStockData"></td>
                  <td id="positionTickerData"></td>
                  <td id="positionSharesData"></td>
                  <td id="positionTotalValueData"></td>
                  <td id="positionCashData"></td>
                  <td id="positionPortfolioAmountData"></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

