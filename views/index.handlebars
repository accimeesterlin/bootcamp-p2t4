          <form id="frm-refresh_history" method="GET" action="/refresh_history">
            <button type="submit" class="btn btn-success text-center" id="btn-refresh_history">Refresh History</button>
          </form>
        </div>
      </div>
    </div> --}}
  </div>
</section>
{{!-- Transactions History (END) --}}

