{{!-- Column Names for Buy Table --}}
<h2 class="text-center">Stocks and Indexes</h2>
<div class="container stock-lists" id="border">
  <h4 class="text-center buy-sell-title">Buy Stocks</h4>
  <div class="row ml-5 pl-4 offset-md-1">
    <div class="col-md-1">
      <h6 class="text-center">Period</h6>
    </div>
    <div class="col-md-2">
      <h6 class="text-center">Stock</h6>
    </div>
    <div class="col-md-1">
      <h6 class="text-center">Ticker</h6>
    </div>
    <div class="col-md-1">
      <h6 class="text-center">Price</h6>
    </div>
    <div class="col-md-1">
      <h6 class="text-center">Shares</h6>
    </div>
    <div class="col-md-1">
      <h6 class="text-center">Valuation</h6>
    </div>
    <div class="col-md-1 offset-md-1 pl-2">
      <h6 class="text-center">Buy</h6>
    </div>

  </div>

  {{!-- Buy Table Form --}}
  {{#each positions}}
  <form id="form-positions-buy" method="POST" action="/buy">
    <div class="form-row ml-5 pl-4 offset-md-1" id="stockList">
      <div class="">
        <input type="hidden" class="form-control" id="username" name="user_name" value="{{this.user_name}}" placeholder=""
          disabled>
      </div>
      <div class="col-md-1">
        <input type="text" class="form-control" id="monthly_period" name="monthly_period" value="{{this.monthly_period}}"
          placeholder="" disabled>
      </div>
      <div class="col-md-2">
        <input type="text" class="form-control" id="stock" name="stock" value="{{this.stock}}" placeholder="" disabled>
      </div>
      <div class="col-md-1">
        <input type="text" class="form-control" id="ticker" name="ticker" value="{{this.ticker}}" placeholder=""
          disabled>
      </div>
      <div class="col-md-1">
        <input type="text" class="form-control" id="price" name="price" value="{{this.price}}" placeholder="" disabled>
      </div>
      <div class="col-md-1">
        <input type="text" class="form-control" id="shares" name="shares" value="{{this.shares}}" placeholder=""
          disabled>
      </div>
      <div class="col-md-1">
        <input type="text" class="form-control" id="valuation" name="valuation" value="{{this.valuation}}" placeholder=""
          disabled>
      </div>
      <div class="col-md-1">
        <button type="submit" class="btn btn-primary ml-3 mb-2" id="buy">Buy</button>
      </div>
      <div class="col-md-1">
        <input type="number" class="form-control" id="buy_shares" name="buy_shares" value="" placeholder="shares">
      </div>
    </div>
  </form>
  {{/each}}
</div>

